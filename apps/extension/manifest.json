{
  "manifest_version": 3,
  "name": "Stackk Wallet",
  "version": "1.0.0",
  "description": "A secure Solana wallet browser extension for managing tokens, NFTs, and DeFi interactions",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.solana.com/*",
    "https://*.solana.fm/*",
    "https://*.helius.xyz/*",
    "https://*.quicknode.com/*",
    "https://*.rpcpool.com/*",
    "https://*.genesysgo.net/*",
    "https://*.mainnet-beta.solana.com/*",
    "https://*.devnet.solana.com/*",
    "https://*.testnet.solana.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Stackk Wallet",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}